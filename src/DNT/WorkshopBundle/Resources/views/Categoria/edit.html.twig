{% extends 'DNTWorkshopBundle:Default:layout.html.twig' %}

{% block subtitle %}Categorias{% endblock %}

{% block content %}
    <br />
    <h2>Editar Categoria</h2>
    <br />

    <form action="{{ path('categoria_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('categoria') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('categoria_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>

{% endblock %}
