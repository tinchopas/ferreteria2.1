{% extends 'DNTWorkshopBundle:Default:layout.html.twig' %}

{% block subtitle %}Clientes{% endblock %}

{% block content %}
    <br />
    <h2>Nuevo Cliente</h2>
    <br />

    <form action="{{ path('clients_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('clients') }}">
                Back to the list
            </a>
        </li>
    </ul>

{% endblock %}
