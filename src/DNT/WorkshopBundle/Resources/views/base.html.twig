        {% include 'DNTWorkshopBundle:Default:header.html.twig' %}

        {% block body %}{% endblock %}

        {% include 'DNTWorkshopBundle:Default:footer.html.twig' %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-1.7.2.min.js') }}"></script>
